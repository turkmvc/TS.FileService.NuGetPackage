<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Taner Saydam</Authors>
    <Company>Taner Saydam</Company>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>8.0.0</Version>
    <PackageIcon>icon.jpg</PackageIcon>
    <Title>File save and delete methods for server, ftp and db</Title>
    <Description>With this package you can save, delete or convert your files.</Description>
    <Copyright>Copyright 2023</Copyright>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/TanerSaydam/GenericFileService</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>fileservice</PackageTags>
    <PackageReleaseNotes>Fixed Readme file.</PackageReleaseNotes>
    <PackageId>TS.FileService</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="5.0.17" />
  </ItemGroup>

  <ItemGroup>
    <None Update="icon.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
